<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_backdrop_image_height"
        android:id="@+id/ItemMovieBDropImageId"
        app:srcCompat="@mipmap/ic_launcher"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemMovieBDropIconId"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/ItemMovieBDropImageId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/movie_backdrop_icon_bottom_margin" />

</RelativeLayout>